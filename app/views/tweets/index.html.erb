            <!-- Tweets Column -->
            <div class="col-md-9">

                <div class="well">
                  <h1>My ParroTweets</h1>
                  <div class="form-group">
                    <form class="form-inline">
                     <div class="form-group">
                       <input type="text" class="form-control" id="tweet" rows="3">
                       <!--<textarea class="form-control" rows="5" id="tweet"></textarea>-->
                     </div>
                     <button type="button" class="btn btn-xs btn-primary">Twitter Icon</button>
                    </form>

          
                  </div>

                
                <%= link_to 'New Tweet', new_tweet_path, class: 'btn btn-success' %>


                  <% @tweets.each do |tweet| %>
                    <% if tweet.parent_tweet_id == nil %>
                      <div class="tweet">
                     <%= tweet.body %> 
                     <div class="buttons">
                        <%= link_to 'Details', tweet, class: "btn btn-primary" %>
                         <%= link_to 'Delete', tweet, method: :delete, data: {confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
