<h1>New ParroTweet</h1>


<%= form_for @tweet do |f| %>

  <div>
    <%= f.label :body %>
  </div>
  <div>
    <%= f.text_field :body, class: 'form-control' %>
  </div>

  <div>
   <label for="spanish"><input name="languages[es]" type="checkbox" /> Spanish</label>
   <label for="french"><input name="languages[fr]" type="checkbox" /> French</label>
   <label for="italian"><input name="languages[it]" type="checkbox" /> Italian</label>
   <label for="russian"><input name="languages[ru]" type="checkbox" /> Russian</label>
   <label for="arabic"><input name="languages[ar]" type="checkbox" /> Arabic</label>
  </div>

  <div>
    <%= f.submit(class: 'btn btn-success') %>
  </div>

<% end %>